<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mangomessenger">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MangoMessenger">
        <activity
            android:theme="@style/Theme.MangoMessenger.NoActionBar"
            android:name=".ui.main.MainActivity"
            android:noHistory="true"
            android:exported="true" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true" />
        <activity
            android:name=".ui.restore.RestoreActivity"
            android:exported="true" />
        <activity
            android:name=".ui.registry.RegistryActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/loginTitle" />
    </application>

</manifest>